<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.start.StartFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/start_label_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/app_margin"
        android:text="@string/start_label"
        android:textColor="@color/purple_700"
        android:textSize="@dimen/app_large_text"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_room"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_margin="@dimen/app_margin"
        android:text="@string/btn_room_text"
        app:cornerRadius="8dp"
        app:icon="@drawable/ic_room"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/start_label_text" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_firebase"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_margin="@dimen/app_margin"
        android:text="@string/btn_firebase_text"
        app:cornerRadius="8dp"
        app:icon="@drawable/ic_firebase"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_room" />
</androidx.constraintlayout.widget.ConstraintLayout>